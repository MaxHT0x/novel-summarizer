const mongoose = require('mongoose');

const userSchema = new mongoose.Schema({
  email: {
    type: String,
    required: true,
    unique: true
  },
  displayName: String,
  profilePicture: String,
  lastLogin: {
    type: Date,
    default: Date.now
  },
  tier: {
    type: String,
    enum: ['free', 'paid'],
    default: 'free'
  },
  ipAddresses: [{
    ip: String,
    lastUsed: {
      type: Date,
      default: Date.now
    }
  }]
}, { timestamps: true });

const User = mongoose.model('User', userSchema);
module.exports = User;